{
    "scripts": {
        "js": "nodemon --watch src --ext js,txt --exec \"node src/main.js\"",
        "ts": "nodemon --watch src --ext ts,txt --exec \"npm run ts:exec\"",
        "ts:exec": "concurrently \"npm run ts:lint\" \"npm run ts:run\"",
        "ts:lint": "eslint src/**/*.ts --fix",
        "ts:run": "ts-node src/main.ts",
        "cpp": "concurrently \"npm run cpp:compile\" \"npm run cpp:run\"",
        "cpp:compile": "nodemon --watch src --ext cpp --exec \"g++ -o src/main.out src/main.cpp\"",
        "cpp:run": "nodemon --watch src --ext out,txt --exec \"node run-cpp.mjs\""
    },
    "nodemonConfig": {
        "events": {
            "start": "node -e console.clear()"
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.8.0",
        "@types/eslint": "^9.6.0",
        "@types/node": "^22.0.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "globals": "^15.8.0",
        "nodemon": "^3.1.4",
        "ts-node": "^10.9.2",
        "tsc": "^2.0.4",
        "typescript": "^5.5.4",
        "typescript-eslint": "^7.18.0"
    }
}
