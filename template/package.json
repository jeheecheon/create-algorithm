{
    "scripts": {
        "ts": "concurrently -k -s first \"yarn lint:watch\" \"yarn ts:watch\"",
        "lint:watch": "nodemon --watch src --ext ts --exec \"eslint src/**/*.ts --fix\"",
        "ts:watch": "nodemon --watch src --ext ts --ext txt --exec ts-node src/main.ts",
        "js": "nodemon --watch src --ext js --ext txt --exec node src/main.js"
    },
    "packageManager": "yarn@4.3.1",
    "devDependencies": {
        "@eslint/js": "^9.8.0",
        "@types/eslint": "^9",
        "@types/node": "^22.0.0",
        "concurrently": "^8.2.2",
        "eslint": "9.x",
        "globals": "^15.8.0",
        "nodemon": "^3.1.4",
        "ts-node": "^10.9.2",
        "tsc": "^2.0.4",
        "typescript": "^5.5.4",
        "typescript-eslint": "^7.17.0"
    }
}
